<div class="main">
  <span href="#" class="button" id="toggle-login"><h1>Dodaj słowo do słownika</h1></span>


  <%= form_for(@word) do |f| %>
      <% if @word.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@word.errors.count, "error") %> prohibited this word from being saved:</h2>

            <ul>
              <% @word.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

            <h3>Słowo:</h3>
            <%= f.text_field :name %><br>
            <h4>Jeżeli chcesz otrzymać powiadomienie o dodaniu tłumaczenia do tego słowa, zostaw nam e-mail.<h4>
              <h3>E-mail:</h3>
            <%= f.text_field :mail %><br>
<br>
        <%= f.submit "Dodaj!" %>

      </div>
  <% end %>


